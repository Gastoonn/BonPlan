{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Plans list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Lieux</th>
                <th>Datepublication</th>
                <th>Username</th>
                <th>Categorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plan in plans %}
            <tr>
                <td><a href="{{ path('plan_show', { 'id': plan.id }) }}">{{ plan.id }}</a></td>
                <td>{{ plan.titre }}</td>
                <td>{{ plan.description }}</td>
                <td>{{ plan.lieux }}</td>
                <td>{% if plan.datePublication %}{{ plan.datePublication|date('Y-m-d') }}{% endif %}</td>
                <td>{{ plan.userName }}</td>
                <td>{{ plan.categorie }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('plan_show', { 'id': plan.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('plan_edit', { 'id': plan.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plan_new') }}">Create a new plan</a>
        </li>
    </ul>
{% endblock %}
